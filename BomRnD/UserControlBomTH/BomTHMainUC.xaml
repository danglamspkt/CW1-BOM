                        Command="{Binding UpdateTHCommand}"
                        Width="100"
                        Background="Green"
                        Margin="10"></Button>
                <StackPanel Orientation="Horizontal">
                    <TextBox Text="{Binding MaTp, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
